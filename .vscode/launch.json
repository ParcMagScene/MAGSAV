{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "java",
			"name": "Launch MAGSAV Backend",
			"request": "launch",
			"mainClass": "com.magscene.magsav.backend.MagsavBackendApplication",
			"projectName": "backend",
			"args": "--spring.profiles.active=development",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "java",
			"name": "Launch MAGSAV Desktop",
			"request": "launch",
			"mainClass": "com.magscene.magsav.desktop.MagsavDesktopApplication",
			"projectName": "desktop-javafx",
			"vmArgs": "--module-path ${env:PATH_TO_FX} --add-modules javafx.controls,javafx.fxml,javafx.web,javafx.swing --add-exports javafx.base/com.sun.javafx.runtime=ALL-UNNAMED --add-exports javafx.graphics/com.sun.javafx.application=ALL-UNNAMED",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	],
	"compounds": [
		{
			"name": "Launch Full Stack (Backend + Desktop)",
			"configurations": [
				"Launch MAGSAV Backend",
				"Launch MAGSAV Desktop"
			],
			"stopAll": true,
			"preLaunchTask": "Build Desktop JavaFX"
		}
	]
}