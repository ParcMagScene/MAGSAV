{
    // Java - désactiver les warnings null analysis trop verbeux
    "java.compile.nullAnalysis.mode": "disabled",
    "java.configuration.updateBuildConfiguration": "automatic",
    
    // Encodage UTF-8
    "files.encoding": "utf8",
    
    // Exclure web-frontend des analyses (module désactivé)
    "files.exclude": {
        "**/web-frontend/node_modules": true,
        "**/web-frontend/build": true,
        "**/web-frontend/coverage": true
    },
    
    // TypeScript - exclure web-frontend
    "typescript.tsdk": null,
    "typescript.disableAutomaticTypeAcquisition": true,
    
    // Gradle - forcer le rechargement
    "java.import.gradle.enabled": true,
    "java.import.gradle.wrapper.enabled": true
}
