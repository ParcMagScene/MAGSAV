  private static void ensureGestionMenu(Parent root) {
    if (root == null) return;
    MenuBar bar = findFirstMenuBar(root);
    if (bar == null) {
        bar = new MenuBar();
        if (root instanceof BorderPane bp) {
            Node top = bp.getTop();
            if (top == null) {
                bp.setTop(bar);
            } else if (top instanceof VBox vbox) {
                vbox.getChildren().add(0, bar);
            } else {
                VBox v = new VBox(bar, top);
                bp.setTop(v);
            }
        } else {
            Scene sc = root.getScene();
            if (sc != null) {
                VBox container = new VBox(bar, root);
                sc.setRoot(container);
            }
        }
    }
    boolean present = bar.getMenus().stream().anyMatch(m -> "Gestion".equalsIgnoreCase(m.getText()));
    if (!present) {
        bar.getMenus().add(GestionMenu.build());
    }
}

// D√©place le menu top-level "Gestion" sous le menu principal (Menu/Fichier/Principal/Accueil, sinon 1er)
private static void integrateGestionIntoMainMenu(Stage stage) {
    if (stage == null) return;
    Scene scene = stage.getScene();
    if (scene == null) return;
    Parent root = scene.getRoot();
    if (root == null) return;

    MenuBar bar = findOrCreateMenuBar(root);
    if (bar == null) return;

    // Chercher un menu principal
    Menu main = findMainMenu(bar);
    if (main == null) {
        main = new Menu("Menu");
        bar.getMenus().add(0, main);
    }

    // Trouver un menu top-level "Gestion"
    Menu gestionTop = null;
    for (Menu m : bar.getMenus()) {
        if ("Gestion".equalsIgnoreCase(m.getText())) {
            gestionTop = m;
            break;
        }
    }

    // Trouver un √©ventuel sous-menu "Gestion" d√©j√† pr√©sent
    for (MenuItem it : main.getItems()) {
        if (it instanceof Menu m && "Gestion".equalsIgnoreCase(m.getText())) {
            // D√©j√† d√©plac√©: rien √† faire
            return;
        }
    }

    // D√©terminer le menu √† ins√©rer comme sous-menu
    Menu toInsert = (gestionTop != null) ? gestionTop : GestionMenu.build();

    // Retirer du top-level si n√©cessaire
    if (gestionTop != null) {
        bar.getMenus().remove(gestionTop);
    }

    // Ajouter un s√©parateur si utile
    if (!main.getItems().isEmpty()
            && !(main.getItems().get(main.getItems().size() - 1) instanceof SeparatorMenuItem)) {
        main.getItems().add(new SeparatorMenuItem());
    }

    // Ins√©rer "Gestion" comme sous-menu
    main.getItems().add(toInsert);
}

// Trouve un MenuBar existant ou en cr√©e un en haut si possible
private static MenuBar findOrCreateMenuBar(Parent root) {
    MenuBar mb = findFirstMenuBar(root);
    if (mb != null) return mb;

    mb = new MenuBar();
    if (root instanceof BorderPane bp) {
        Node top = bp.getTop();
        if (top == null) {
            bp.setTop(mb);
        } else if (top instanceof VBox vbox) {
            vbox.getChildren().add(0, mb);
        } else {
            VBox v = new VBox();
            v.getChildren().add(mb);
            v.getChildren().add(top);
            bp.setTop(v);
        }
        return mb;
    }

    Scene sc = root.getScene();
    if (sc != null) {
        VBox container = new VBox();
        container.getChildren().add(mb);
        container.getChildren().add(root);
        sc.setRoot(container);
        return mb;
    }
    return null;
}

// Recherche en profondeur le premier MenuBar
private static MenuBar findFirstMenuBar(Parent root) {
    java.util.Deque<Parent> stack = new java.util.ArrayDeque<>();
    stack.push(root);
    while (!stack.isEmpty()) {
        Parent p = stack.pop();
        if (p instanceof MenuBar mb) return mb;
        for (Node n : p.getChildrenUnmodifiable()) {
            if (n instanceof MenuBar mb2) return mb2;
            if (n instanceof Parent pr) stack.push(pr);
        }
    }
    return null;
}

// Choisit le menu "principal" parmi quelques libell√©s, sinon le 1er
private static Menu findMainMenu(MenuBar bar) {
    if (bar.getMenus().isEmpty()) return null;
    List<String> preferred = Arrays.asList("Menu", "Fichier", "Principal", "Accueil", "Main", "File");
    for (String name : preferred) {
        for (Menu m : bar.getMenus()) {
            if (name.equalsIgnoreCase(m.getText())) return m;
        }
    }
    // Par d√©faut, retourner le 1er menu
    return bar.getMenus().get(0);
