<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsav.gui.enhanced.ConfigurationViewController">
   <top>
      <Label styleClass="h1" text="Configuration MAGSAV">
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <ScrollPane fitToWidth="true">
         <content>
            <VBox spacing="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <!-- Section Général -->
                  <TitledPane expanded="true" text="Paramètres Généraux">
                     <content>
                        <GridPane fx:id="configGrid" hgap="10.0" vgap="10.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="NEVER" minWidth="200.0" />
                              <ColumnConstraints hgrow="ALWAYS" />
                              <ColumnConstraints hgrow="NEVER" />
                           </columnConstraints>
                           <children>
                              <!-- Mode Debug -->
                              <Label text="Mode Debug:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <CheckBox fx:id="debugModeCheck" text="Activer le mode debug" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              
                              <!-- Cache -->
                              <Label text="Cache:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <CheckBox fx:id="cacheEnabledCheck" text="Activer le cache" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              
                              <!-- Monitoring -->
                              <Label text="Monitoring:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                              <CheckBox fx:id="performanceMonitoringCheck" text="Monitoring des performances" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              
                              <!-- Sauvegarde auto -->
                              <Label text="Sauvegarde:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                              <CheckBox fx:id="autoSaveCheck" text="Sauvegarde automatique" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              
                              <!-- Niveau de log -->
                              <Label text="Niveau de log:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                              <ComboBox fx:id="logLevelCombo" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </GridPane>
                     </content>
                  </TitledPane>
                  
                  <!-- Section Fichiers -->
                  <TitledPane expanded="true" text="Chemins et Répertoires">
                     <content>
                        <GridPane hgap="10.0" vgap="10.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="NEVER" minWidth="200.0" />
                              <ColumnConstraints hgrow="ALWAYS" />
                              <ColumnConstraints hgrow="NEVER" />
                           </columnConstraints>
                           <children>
                              <!-- Base de données -->
                              <Label text="Base de données:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <TextField fx:id="databasePathField" promptText="Chemin vers la base de données SQLite" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              <Button fx:id="databasePathButton" onAction="#onSelectDatabasePath" text="Parcourir..." GridPane.columnIndex="2" GridPane.rowIndex="0" />
                              
                              <!-- Répertoire médias -->
                              <Label text="Répertoire médias:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <TextField fx:id="mediaDirectoryField" promptText="Répertoire pour stocker les médias" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Button fx:id="mediaDirectoryButton" onAction="#onSelectMediaDirectory" text="Parcourir..." GridPane.columnIndex="2" GridPane.rowIndex="1" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </GridPane>
                     </content>
                  </TitledPane>
                  
                  <!-- Section Actions -->
                  <TitledPane expanded="true" text="Actions de Maintenance">
                     <content>
                        <FlowPane hgap="10.0" vgap="10.0">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                           <children>
                              <Button onAction="#onClearCache" text="Vider le Cache" />
                              <Button onAction="#onShowPerformanceMetrics" text="Métriques Performance" />
                              <Button onAction="#onValidateConfiguration" text="Valider Configuration" />
                           </children>
                        </FlowPane>
                     </content>
                  </TitledPane>
                  
                  <!-- Section Rapport -->
                  <TitledPane expanded="false" text="Rapport de Configuration">
                     <content>
                        <VBox spacing="10.0">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                           <children>
                              <TextArea fx:id="configReportArea" editable="false" prefRowCount="10" wrapText="true" />
                           </children>
                        </VBox>
                     </content>
                  </TitledPane>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Button fx:id="resetButton" onAction="#onResetConfiguration" text="Remettre par défaut" />
            <Button fx:id="applyButton" onAction="#onApplyConfiguration" styleClass="accent" text="Appliquer" />
            <Button fx:id="saveButton" onAction="#onSaveConfiguration" styleClass="accent" text="Sauvegarder" />
         </children>
      </HBox>
   </bottom>
</BorderPane>