<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsav.gui.InterventionDetailController">
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
            <children>
                <Label text="Fiche Intervention" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <GridPane hgap="10.0" vgap="6.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="100.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <children>
                        <Label text="Identifiant:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <Label fx:id="lblCode" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="Produit:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <Label fx:id="lblProduit" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="N° de série:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <Label fx:id="lblSn" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <Label text="Propriétaire:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <Label fx:id="lblProprietaire" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                        <Label text="Statut:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                        <Label fx:id="lblStatut" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                        <Label text="Catégorie:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                        <HBox spacing="8.0" GridPane.rowIndex="5" GridPane.columnIndex="1">
                            <children>
                                <Label fx:id="lblCategorie" />
                                <ComboBox fx:id="cmbCategorie" promptText="Choisir..." visible="false" managed="false" />
                            </children>
                        </HBox>

                        <Label text="Sous-catégorie:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                        <HBox spacing="8.0" GridPane.rowIndex="6" GridPane.columnIndex="1">
                            <children>
                                <Label fx:id="lblSousCategorie" />
                                <ComboBox fx:id="cmbSousCategorie" promptText="Choisir..." visible="false" managed="false" />
                            </children>
                        </HBox>

                        <Label text="Entrée:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                        <Label fx:id="lblEntree" GridPane.rowIndex="7" GridPane.columnIndex="1" />

                        <Label text="Sortie:" GridPane.rowIndex="8" GridPane.columnIndex="0" />
                        <Label fx:id="lblSortie" GridPane.rowIndex="8" GridPane.columnIndex="1" />

                        <Label text="Panne:" GridPane.rowIndex="9" GridPane.columnIndex="0" />
                        <TextArea fx:id="txtProbleme" GridPane.rowIndex="9" GridPane.columnIndex="1" editable="false" wrapText="true" prefRowCount="3" />
                    </children>
                </GridPane>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10.0" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
            <children>
                <Button fx:id="btnEdit" text="Modifier" onAction="#handleEdit" />
                <Button fx:id="btnSave" text="Enregistrer" onAction="#handleSave" visible="false" managed="false" />
                <Button fx:id="btnCancel" text="Annuler" onAction="#handleCancel" visible="false" managed="false" />
                <Button fx:id="btnClose" text="Fermer" onAction="#handleClose" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
