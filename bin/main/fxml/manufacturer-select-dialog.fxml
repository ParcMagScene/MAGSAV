<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsav.gui.ManufacturerSelectController">
    <top>
        <HBox spacing="8.0" alignment="CENTER_LEFT">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <children>
                <TextField fx:id="searchField" promptText="Rechercher (nom, site, email)" HBox.hgrow="ALWAYS" />
                <Button text="Rechercher" onAction="#handleSearch" />
                <Region HBox.hgrow="ALWAYS" />
                <TextField fx:id="newNameField" promptText="Nouveau fabricant (nom)" />
                <Button text="Créer" onAction="#handleCreate" />
            </children>
        </HBox>
    </top>
    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="colName" text="Nom" prefWidth="200" />
                <TableColumn fx:id="colWebsite" text="Site" prefWidth="180" />
                <TableColumn fx:id="colEmail" text="Email" prefWidth="180" />
                <TableColumn fx:id="colPhone" text="Téléphone" prefWidth="140" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="8.0" alignment="CENTER_RIGHT">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <children>
                <Button text="Logo…" onAction="#handleChooseLogo" />
                <Button fx:id="selectButton" text="Sélectionner" onAction="#handleSelect" />
                <Button fx:id="cancelButton" text="Annuler" onAction="#handleCancel" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
