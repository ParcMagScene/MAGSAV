<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsav.gui.management.MediaManagementControllerSimple">
   <top>
      <VBox spacing="10.0">
         <children>
            <Label text="Gestion des Médias">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true">
         <content>
            <VBox fx:id="mainContainer" spacing="15.0">
               <children>
                  <!-- Section Import -->
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Import de Médias">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="btnImportPhotos" mnemonicParsing="false" text="Importer Photos" onAction="#importPhotos" />
                              <Button fx:id="btnImportLogos" mnemonicParsing="false" text="Importer Logos" onAction="#importLogos" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Section Normalisation -->
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Normalisation">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="btnNormalizeImages" mnemonicParsing="false" text="Normaliser Images" onAction="#normalizeImages" />
                              <Button fx:id="btnNormalizeLogos" mnemonicParsing="false" text="Normaliser Logos" onAction="#normalizeLogos" />
                              <Button fx:id="btnNormalizeAll" mnemonicParsing="false" text="Normaliser Tout" onAction="#normalizeAll" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Section Maintenance -->
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Maintenance">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="btnRemoveDuplicates" mnemonicParsing="false" text="Supprimer Doublons" onAction="#removeDuplicates" />
                              <Button fx:id="btnFullMaintenance" mnemonicParsing="false" text="Maintenance Complète" onAction="#performFullMaintenance" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Section Log -->
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Journal des Opérations">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="textAreaLog" prefHeight="200.0" promptText="Les détails des opérations s'afficheront ici..." />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>