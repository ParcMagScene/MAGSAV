<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsav.gui.ProductFormController">
   <children>
      <Label styleClass="form-title" text="Nouveau produit" />
      
      <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED">
         <content>
            <VBox spacing="16.0" styleClass="form-content">
               <children>
                  <!-- Informations générales -->
                  <VBox spacing="8.0" styleClass="form-section">
                     <children>
                        <Label styleClass="section-title" text="Informations générales" />
                        
                        <HBox spacing="12.0">
                           <children>
                              <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="field-label" text="Nom du produit *" />
                                    <TextField fx:id="nomField" promptText="Entrer le nom du produit" styleClass="dark-text-field" />
                                 </children>
                              </VBox>
                              <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="field-label" text="Numéro de série" />
                                    <TextField fx:id="snField" promptText="Numéro de série" styleClass="dark-text-field" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        
                        <HBox spacing="12.0">
                           <children>
                              <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="field-label" text="Fabricant" />
                                    <TextField fx:id="fabricantField" promptText="Nom du fabricant" styleClass="dark-text-field" />
                                 </children>
                              </VBox>
                              <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="field-label" text="UID" />
                                    <TextField fx:id="uidField" promptText="Identifiant unique" styleClass="dark-text-field" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        
                        <VBox spacing="4.0">
                           <children>
                              <Label styleClass="field-label" text="Situation" />
                              <ComboBox fx:id="situationCombo" promptText="Sélectionner une situation" styleClass="dark-combo-box" maxWidth="1.7976931348623157E308" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  
                  <!-- Description -->
                  <VBox spacing="8.0" styleClass="form-section">
                     <children>
                        <Label styleClass="section-title" text="Description" />
                        <VBox spacing="4.0">
                           <children>
                              <Label styleClass="field-label" text="Description détaillée" />
                              <TextArea fx:id="descriptionArea" promptText="Description du produit..." styleClass="dark-text-area" prefRowCount="4" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  
                  <!-- Informations financières -->
                  <VBox spacing="8.0" styleClass="form-section">
                     <children>
                        <Label styleClass="section-title" text="Informations financières" />
                        
                        <HBox spacing="12.0">
                           <children>
                              <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="field-label" text="Prix d'achat (€)" />
                                    <TextField fx:id="prixField" promptText="0.00" styleClass="dark-text-field" />
                                 </children>
                              </VBox>
                              <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="field-label" text="Date d'achat" />
                                    <DatePicker fx:id="dateAchatPicker" promptText="Sélectionner une date" styleClass="dark-date-picker" maxWidth="1.7976931348623157E308" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        
                        <HBox spacing="12.0">
                           <children>
                              <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="field-label" text="Client associé" />
                                    <ComboBox fx:id="clientCombo" promptText="Sélectionner un client" styleClass="dark-combo-box" maxWidth="1.7976931348623157E308" />
                                 </children>
                              </VBox>
                              <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="field-label" text="Garantie (mois)" />
                                    <TextField fx:id="garantieField" promptText="12" styleClass="dark-text-field" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Catégories -->
                  <VBox spacing="8.0" styleClass="form-section">
                     <children>
                        <Label styleClass="section-title" text="Catégorisation" />
                        
                        <HBox spacing="12.0">
                           <children>
                              <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="field-label" text="Catégorie" />
                                    <ComboBox fx:id="categorieCombo" promptText="Sélectionner une catégorie" styleClass="dark-combo-box" maxWidth="1.7976931348623157E308" />
                                 </children>
                              </VBox>
                              <VBox spacing="4.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="field-label" text="Sous-catégorie" />
                                    <ComboBox fx:id="sousCategorieCombo" promptText="Sélectionner une sous-catégorie" styleClass="dark-combo-box" maxWidth="1.7976931348623157E308" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
      
      <!-- Boutons d'action -->
      <HBox spacing="12.0" styleClass="form-buttons">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancel" styleClass="dark-button-secondary" text="Annuler" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSave" styleClass="primary-button" text="Enregistrer" />
         </children>
      </HBox>
   </children>
</VBox>