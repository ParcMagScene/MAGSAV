<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsav.gui.societes.SavDetailController">
   <top>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <!-- En-tête avec logo et nom -->
         <HBox alignment="CENTER_LEFT" spacing="20.0">
            <ImageView fx:id="logoImageView" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" />
            <VBox spacing="5.0">
               <Label fx:id="nomLabel" text="Nom du SAV" styleClass="header-title">
                  <font>
                     <Font name="System Bold" size="24.0" />
                  </font>
               </Label>
               <Label fx:id="typeLabel" text="SAV Externe" styleClass="header-subtitle">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </VBox>
         </HBox>
         
         <!-- Informations de contact -->
         <GridPane hgap="15.0" vgap="10.0">
            <columnConstraints>
               <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
               <ColumnConstraints hgrow="ALWAYS" />
               <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
               <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="info-label" />
            <Label fx:id="emailLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Téléphone:" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="info-label" />
            <Label fx:id="phoneLabel" text="-" GridPane.columnIndex="3" GridPane.rowIndex="0" />
            
            <Label text="Adresse:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="info-label" />
            <Label fx:id="adresseLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="3" />
         </GridPane>
         
         <!-- Notes -->
         <VBox spacing="5.0">
            <Label text="Notes:" styleClass="info-label" />
            <TextArea fx:id="notesTextArea" editable="false" prefRowCount="2" wrapText="true" styleClass="readonly-textarea" />
         </VBox>
         
         <Separator />
      </VBox>
   </top>
   
   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE">
         <!-- Onglet Produits actuels -->
         <Tab text="Produits actuels">
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Produits actuellement en SAV dans cette société:" styleClass="section-header" />
                  <Label fx:id="productsCountLabel" text="(0)" styleClass="count-label" />
               </HBox>
               
               <TableView fx:id="currentProductsTable">
                  <columns>
                     <TableColumn fx:id="colCurrentProdNom" prefWidth="200.0" text="Nom" />
                     <TableColumn fx:id="colCurrentProdSN" prefWidth="150.0" text="N° Série" />
                     <TableColumn fx:id="colCurrentProdUID" prefWidth="120.0" text="UID" />
                     <TableColumn fx:id="colCurrentProdFabricant" prefWidth="150.0" text="Fabricant" />
                     <TableColumn fx:id="colCurrentProdDateSav" prefWidth="120.0" text="En SAV depuis" />
                  </columns>
               </TableView>
            </VBox>
         </Tab>
         
         <!-- Onglet Historique -->
         <Tab text="Historique">
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Historique des prises en charge:" styleClass="section-header" />
                  <Label fx:id="historyCountLabel" text="(0)" styleClass="count-label" />
               </HBox>
               
               <TableView fx:id="historyTable">
                  <columns>
                     <TableColumn fx:id="colHistoryProdNom" prefWidth="200.0" text="Produit" />
                     <TableColumn fx:id="colHistoryDateDebut" prefWidth="120.0" text="Date début" />
                     <TableColumn fx:id="colHistoryDateFin" prefWidth="120.0" text="Date fin" />
                     <TableColumn fx:id="colHistoryDuree" prefWidth="100.0" text="Durée" />
                     <TableColumn fx:id="colHistoryStatut" prefWidth="120.0" text="Statut" />
                     <TableColumn fx:id="colHistoryNotes" prefWidth="200.0" text="Notes" />
                  </columns>
               </TableView>
            </VBox>
         </Tab>
      </TabPane>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <Button text="Modifier" onAction="#onEdit" styleClass="primary-button" />
         <Button text="Fermer" onAction="#onClose" />
      </HBox>
   </bottom>
</BorderPane>