&lt;?xml version="1.0" encoding="UTF-8"?&gt;
&lt;?import javafx.scene.control.*?&gt;
&lt;?import javafx.scene.layout.*?&gt;
&lt;?import com.magsav.gui.component.FileDropZone?&gt;

&lt;BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.magsav.gui.societes.ManufacturerFormController" prefWidth="500" prefHeight="400"&gt;
  
  &lt;top&gt;
    &lt;Label text="Nouveau Fabricant" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-padding: 10;"
           fx:id="lblTitle"/&gt;
  &lt;/top&gt;
  
  &lt;center&gt;
    &lt;ScrollPane fitToWidth="true"&gt;
      &lt;VBox spacing="15" style="-fx-padding: 20;"&gt;
        
        &lt;!-- Informations de base --&gt;
        &lt;VBox spacing="8"&gt;
          &lt;Label text="Informations générales" style="-fx-font-weight: bold;"/&gt;
          
          &lt;HBox spacing="10"&gt;
            &lt;Label text="Nom :" minWidth="80"/&gt;
            &lt;TextField fx:id="tfNom" HBox.hgrow="ALWAYS" promptText="Nom du fabricant"/&gt;
          &lt;/HBox&gt;
          
          &lt;HBox spacing="10"&gt;
            &lt;Label text="Email :" minWidth="80"/&gt;
            &lt;TextField fx:id="tfEmail" HBox.hgrow="ALWAYS" promptText="contact@fabricant.com"/&gt;
          &lt;/HBox&gt;
          
          &lt;HBox spacing="10"&gt;
            &lt;Label text="Téléphone :" minWidth="80"/&gt;
            &lt;TextField fx:id="tfPhone" HBox.hgrow="ALWAYS" promptText="+33 1 23 45 67 89"/&gt;
          &lt;/HBox&gt;
          
          &lt;HBox spacing="10"&gt;
            &lt;Label text="Site web :" minWidth="80"/&gt;
            &lt;TextField fx:id="tfWebsite" HBox.hgrow="ALWAYS" promptText="https://www.fabricant.com"/&gt;
          &lt;/HBox&gt;
          
          &lt;HBox spacing="10"&gt;
            &lt;Label text="Pays :" minWidth="80"/&gt;
            &lt;TextField fx:id="tfCountry" HBox.hgrow="ALWAYS" promptText="France"/&gt;
          &lt;/HBox&gt;
        &lt;/VBox&gt;
        
        &lt;Separator/&gt;
        
        &lt;!-- Zone de logo --&gt;
        &lt;VBox spacing="8"&gt;
          &lt;Label text="Logo de la société" style="-fx-font-weight: bold;"/&gt;
          
          &lt;FileDropZone fx:id="logoDropZone" 
                        promptText="Glissez ici le logo de la société"
                        acceptedExtensions=".jpg, .jpeg, .png, .gif, .svg"/&gt;
          
          &lt;HBox spacing="10"&gt;
            &lt;Button text="Parcourir..." onAction="#onBrowseLogo"/&gt;
            &lt;Button text="Supprimer" onAction="#onRemoveLogo" fx:id="btnRemoveLogo"/&gt;
            &lt;Pane HBox.hgrow="ALWAYS"/&gt;
            &lt;Label fx:id="lblLogoStatus" text="" style="-fx-text-fill: #666;"/&gt;
          &lt;/HBox&gt;
        &lt;/VBox&gt;
        
        &lt;Separator/&gt;
        
        &lt;!-- Zone de documents --&gt;
        &lt;VBox spacing="8"&gt;
          &lt;Label text="Documents associés" style="-fx-font-weight: bold;"/&gt;
          
          &lt;FileDropZone fx:id="documentsDropZone" 
                        promptText="Glissez ici les documents (catalogues, certifications, etc.)"
                        acceptedExtensions=".pdf, .doc, .docx, .xls, .xlsx"/&gt;
          
          &lt;HBox spacing="10"&gt;
            &lt;Button text="Ajouter des documents..." onAction="#onBrowseDocuments"/&gt;
            &lt;Pane HBox.hgrow="ALWAYS"/&gt;
            &lt;Label fx:id="lblDocumentsCount" text="0 document(s)" style="-fx-text-fill: #666;"/&gt;
          &lt;/HBox&gt;
        &lt;/VBox&gt;
        
        &lt;Separator/&gt;
        
        &lt;!-- Notes --&gt;
        &lt;VBox spacing="8"&gt;
          &lt;Label text="Notes" style="-fx-font-weight: bold;"/&gt;
          &lt;TextArea fx:id="taNotes" prefRowCount="3" promptText="Notes et commentaires sur ce fabricant..."/&gt;
        &lt;/VBox&gt;
        
      &lt;/VBox&gt;
    &lt;/ScrollPane&gt;
  &lt;/center&gt;
  
  &lt;bottom&gt;
    &lt;ButtonBar style="-fx-padding: 10;"&gt;
      &lt;buttons&gt;
        &lt;Button text="Annuler" onAction="#onCancel" ButtonBar.buttonData="CANCEL_CLOSE"/&gt;
        &lt;Button text="Enregistrer" onAction="#onSave" ButtonBar.buttonData="OK_DONE" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" fx:id="btnSave"/&gt;
      &lt;/buttons&gt;
    &lt;/ButtonBar&gt;
  &lt;/bottom&gt;
  
&lt;/BorderPane&gt;