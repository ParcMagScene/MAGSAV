<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.magsav.gui.categories.CategoriesController" prefWidth="720" prefHeight="420">
  <top>
    <ToolBar>
      <Label text="Catégories" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
      <Pane HBox.hgrow="ALWAYS"/>
      <TextField fx:id="tfSearch" promptText="Rechercher..." prefWidth="240"/>

      <Separator orientation="VERTICAL"/>
      <Button text="➕ Ajouter" onAction="#onAddCategory"/>
      <Button text="➕ Sous-catégorie" onAction="#onAddSubcategory"/>
      <Button text="Modifier" onAction="#onEdit"/>
      <Button text="Supprimer" onAction="#onDelete"/>
    </ToolBar>
  </top>
  <center>
    <TableView fx:id="table">
      <columns>
        <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
        <TableColumn fx:id="colHierarchie" text="Hiérarchie" prefWidth="300"/>
        <TableColumn fx:id="colNom" text="Nom" prefWidth="200"/>
        <TableColumn fx:id="colType" text="Type" prefWidth="120"/>
        <TableColumn fx:id="colParent" text="Catégorie parent" prefWidth="180"/>
      </columns>
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
      </columnResizePolicy>
      <placeholder><Label text="Aucune catégorie"/></placeholder>
    </TableView>
  </center>
</BorderPane>