<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsav.gui.dialogs.PhotoMosaicController">
   <top>
      <VBox spacing="10.0">
         <children>
            <Label styleClass="header-label" text="Choisir une photo" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Rechercher:" />
                  <TextField fx:id="tfSearch" promptText="Filtrer par nom de fichier..." HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
         <content>
            <TilePane fx:id="tilePane" alignment="TOP_LEFT" prefColumns="4" hgap="10.0" vgap="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TilePane>
         </content>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ScrollPane>
   </center>
   <bottom>
      <VBox spacing="10.0">
         <children>
            <Label fx:id="lblInfo" text="Chargement des photos..." />
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="btnCancel" mnemonicParsing="false" text="Annuler" />
                  <Button fx:id="btnOk" mnemonicParsing="false" text="SÃ©lectionner" defaultButton="true" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane>