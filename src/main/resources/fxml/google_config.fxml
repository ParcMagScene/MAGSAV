<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsav.gui.GoogleConfigController">
   <top>
      <VBox spacing="10.0">
         <children>
            <Label text="Configuration Google Services">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Separator />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true">
         <content>
            <VBox spacing="20.0">
               <children>
                  <!-- Configuration OAuth2 -->
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Configuration OAuth2 Google">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <GridPane hgap="10.0" vgap="10.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="150.0" prefWidth="150.0" />
                            <ColumnConstraints hgrow="ALWAYS" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                          </rowConstraints>
                           <children>
                              <Label text="Client ID:" />
                              <TextField fx:id="txtClientId" promptText="Votre Client ID Google" GridPane.columnIndex="1" />
                              <Label text="Client Secret:" GridPane.rowIndex="1" />
                              <PasswordField fx:id="txtClientSecret" promptText="Votre Client Secret Google" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="Redirect URI:" GridPane.rowIndex="2" />
                              <TextField fx:id="txtRedirectUri" text="http://localhost:8080/oauth/callback" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Label text="Scopes:" GridPane.rowIndex="3" />
                              <TextArea fx:id="txtScopes" prefRowCount="3" wrapText="true" text="https://www.googleapis.com/auth/calendar&#10;https://www.googleapis.com/auth/gmail.send&#10;https://www.googleapis.com/auth/contacts" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                 <children>
                                    <Button fx:id="btnAutoriser" mnemonicParsing="false" onAction="#onAutoriser" text="Autoriser avec Google" />
                                    <Label fx:id="lblStatutAuth" text="Non autorisé" textFill="RED" />
                                 </children>
                              </HBox>
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
                  
                  <!-- Configuration Services -->
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Services Google">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <GridPane hgap="10.0" vgap="10.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="200.0" prefWidth="200.0" />
                            <ColumnConstraints hgrow="NEVER" />
                            <ColumnConstraints hgrow="ALWAYS" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                          </rowConstraints>
                           <children>
                              <!-- Calendar -->
                              <CheckBox fx:id="cbCalendarActif" mnemonicParsing="false" text="Google Calendar" />
                              <Button fx:id="btnTesterCalendar" mnemonicParsing="false" onAction="#onTesterCalendar" text="Tester" GridPane.columnIndex="1" />
                              <Label fx:id="lblStatutCalendar" text="Non testé" GridPane.columnIndex="2" />
                              
                              <!-- Gmail -->
                              <CheckBox fx:id="cbGmailActif" mnemonicParsing="false" text="Gmail" GridPane.rowIndex="1" />
                              <Button fx:id="btnTesterGmail" mnemonicParsing="false" onAction="#onTesterGmail" text="Tester" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label fx:id="lblStatutGmail" text="Non testé" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                              
                              <!-- Contacts -->
                              <CheckBox fx:id="cbContactsActif" mnemonicParsing="false" text="Google Contacts" GridPane.rowIndex="2" />
                              <Button fx:id="btnTesterContacts" mnemonicParsing="false" onAction="#onTesterContacts" text="Tester" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Label fx:id="lblStatutContacts" text="Non testé" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                              
                              <!-- Synchronisation automatique -->
                              <HBox spacing="10.0" GridPane.columnSpan="3" GridPane.rowIndex="3">
                                 <children>
                                    <CheckBox fx:id="cbSyncCalendarActif" mnemonicParsing="false" text="Synchronisation automatique Calendar" />
                                    <Label text="Intervalle (min):" />
                                    <Spinner fx:id="spnIntervalleSync" initialValue="30" max="1440" min="5" />
                                 </children>
                              </HBox>
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
                  
                  <!-- Configuration Email -->
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Configuration Email">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <GridPane hgap="10.0" vgap="10.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="150.0" prefWidth="150.0" />
                            <ColumnConstraints hgrow="ALWAYS" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                            <RowConstraints vgrow="NEVER" />
                          </rowConstraints>
                           <children>
                              <Label text="Email expéditeur:" />
                              <TextField fx:id="txtEmailExpediteur" promptText="votre-email@gmail.com" GridPane.columnIndex="1" />
                              <Label text="Nom expéditeur:" GridPane.rowIndex="1" />
                              <TextField fx:id="txtNomExpediteur" promptText="MAGSAV Service Client" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                 <children>
                                    <CheckBox fx:id="cbNotificationInterventions" mnemonicParsing="false" text="Notifications interventions" />
                                    <CheckBox fx:id="cbRappelsAutomatiques" mnemonicParsing="false" text="Rappels automatiques" />
                                 </children>
                              </HBox>
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="btnAnnuler" mnemonicParsing="false" onAction="#onAnnuler" text="Annuler" />
            <Button fx:id="btnSauvegarder" mnemonicParsing="false" onAction="#onSauvegarder" style="-fx-base: #4CAF50;" text="Sauvegarder" textFill="WHITE" />
            <Button fx:id="btnTesterTout" mnemonicParsing="false" onAction="#onTesterTout" text="Tester tous les services" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>