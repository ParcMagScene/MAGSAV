<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsav.gui.management.MediaManagementController">
   <top>
      <VBox spacing="10.0">
         <children>
            <Label text="Gestion des Médias">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Separator />
            <Label text="Importez, organisez et maintenez votre bibliothèque d'images et de logos." textFill="#666666" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
         <content>
            <VBox fx:id="mainContainer" spacing="15.0">
               <children>
                  <!-- Section Import -->
                  <VBox spacing="10.0" styleClass="card">
                     <children>
                        <Label text="Import de Médias">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label text="Importez de nouvelles photos et logos dans votre bibliothèque. Les images seront automatiquement organisées et normalisées." textFill="#666666" wrapText="true" />
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="btnImportPhotos" mnemonicParsing="false" text="Importer Photos" onAction="#importPhotos">
                                 <tooltip>
                                    <Tooltip text="Importer des photos de produits" />
                                 </tooltip>
                              </Button>
                              <Button fx:id="btnImportLogos" mnemonicParsing="false" text="Importer Logos" onAction="#importLogos">
                                 <tooltip>
                                    <Tooltip text="Importer des logos de fabricants" />
                                 </tooltip>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>

                  <!-- Section Normalisation -->
                  <VBox spacing="10.0" styleClass="card">
                     <children>
                        <Label text="Normalisation des Images">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label text="Redimensionne toutes les images en 3 tailles standards (miniature 150px, moyenne 400px, grande 800px) pour optimiser l'affichage." textFill="#666666" wrapText="true" />
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="btnNormalizeImages" mnemonicParsing="false" text="Normaliser Images" onAction="#normalizeImages">
                                 <tooltip>
                                    <Tooltip text="Crée des versions optimisées de toutes les images" />
                                 </tooltip>
                              </Button>
                              <Button fx:id="btnNormalizeLogos" mnemonicParsing="false" text="Normaliser Logos" onAction="#normalizeLogos">
                                 <tooltip>
                                    <Tooltip text="Crée des versions optimisées de tous les logos" />
                                 </tooltip>
                              </Button>
                              <Button fx:id="btnNormalizeAll" mnemonicParsing="false" text="Normaliser Tout" onAction="#normalizeAll">
                                 <tooltip>
                                    <Tooltip text="Normalise images et logos simultanément" />
                                 </tooltip>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Section Maintenance -->
                  <VBox spacing="10.0" styleClass="card">
                     <children>
                        <Label text="Maintenance et Optimisation">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label text="Optimisez votre bibliothèque en supprimant les doublons et en effectuant une maintenance complète." textFill="#666666" wrapText="true" />
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="btnRemoveDuplicates" mnemonicParsing="false" text="Supprimer Doublons" onAction="#removeDuplicates">
                                 <tooltip>
                                    <Tooltip text="Recherche et supprime les images identiques" />
                                 </tooltip>
                              </Button>
                              <Button fx:id="btnFullMaintenance" mnemonicParsing="false" text="Maintenance Complète" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" onAction="#performFullMaintenance">
                                 <tooltip>
                                    <Tooltip text="Normalise les images puis supprime les doublons" />
                                 </tooltip>
                              </Button>
                           </children>
                        </HBox>
                        <Label text="ATTENTION: La suppression des doublons est irréversible." textFill="#ff6b35" wrapText="true">
                           <font>
                              <Font name="System Italic" size="12.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>

                  <!-- Section Gestion Photos -->
                  <VBox spacing="10.0" styleClass="card">
                     <children>
                        <Label text="Gestion des Photos">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label text="Visualisez et supprimez des photos de votre bibliothèque. Toutes les versions normalisées seront également supprimées." textFill="#666666" wrapText="true" />
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="btnLoadPhotos" text="Charger la liste" onAction="#loadPhotosList" />
                              <Button fx:id="btnSelectAllPhotos" text="Tout sélectionner" onAction="#selectAllPhotos" />
                              <Button fx:id="btnSelectNonePhotos" text="Tout désélectionner" onAction="#selectNonePhotos" />
                              <Button fx:id="btnDeletePhotos" text="Supprimer sélection" style="-fx-background-color: #f44336; -fx-text-fill: white;" onAction="#deleteSelectedPhotos" />
                           </children>
                        </HBox>
                        <ListView fx:id="listViewPhotos" prefHeight="120.0" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Section Gestion Logos -->
                  <VBox spacing="10.0" styleClass="card">
                     <children>
                        <Label text="Gestion des Logos">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label text="Visualisez et supprimez des logos de votre bibliothèque. Toutes les versions normalisées seront également supprimées." textFill="#666666" wrapText="true" />
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="btnLoadLogos" text="Charger la liste" onAction="#loadLogosList" />
                              <Button fx:id="btnSelectAllLogos" text="Tout sélectionner" onAction="#selectAllLogos" />
                              <Button fx:id="btnSelectNoneLogos" text="Tout désélectionner" onAction="#selectNoneLogos" />
                              <Button fx:id="btnDeleteLogos" text="Supprimer sélection" style="-fx-background-color: #f44336; -fx-text-fill: white;" onAction="#deleteSelectedLogos" />
                           </children>
                        </HBox>
                        <ListView fx:id="listViewLogos" prefHeight="120.0" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>

                  <!-- Section État et Journal -->
                  <VBox spacing="10.0" styleClass="card">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="État:">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <Label fx:id="labelStatus" text="Prêt" />
                              <ProgressBar fx:id="progressBar" prefWidth="200.0" visible="false" />
                           </children>
                        </HBox>
                        <Label text="Journal des Opérations:">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="textAreaLog" prefHeight="200.0" promptText="Les détails des opérations s'afficheront ici..." style="-fx-font-family: monospace; -fx-font-size: 11;" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>