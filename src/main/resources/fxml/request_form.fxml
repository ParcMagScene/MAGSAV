<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.magsav.gui.requests.RequestFormController" headerText="Demande">
  <content>
    <GridPane hgap="8" vgap="8" prefWidth="520">
      <columnConstraints>
        <ColumnConstraints minWidth="140"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="340"/>
      </columnConstraints>
      <children>
        <Label text="Fournisseur"/><ComboBox fx:id="cbFournisseur" promptText="(aucun)"/>
        <Label text="Commentaire"/><TextArea fx:id="taComment" prefRowCount="3" promptText="Contexte, urgence..."/>
      </children>
    </GridPane>
  </content>
  <buttonTypes>
    <ButtonType text="Enregistrer" buttonData="OK_DONE"/>
    <ButtonType text="Annuler" buttonData="CANCEL_CLOSE"/>
  </buttonTypes>
</DialogPane>