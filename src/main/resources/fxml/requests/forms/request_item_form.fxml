<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.magsav.gui.requests.RequestItemFormController" headerText="Article de la demande">
  <content>
    <GridPane hgap="8" vgap="8" prefWidth="520">
      <columnConstraints>
        <ColumnConstraints minWidth="140"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="340"/>
      </columnConstraints>
      <children>
        <Label text="Référence"/><TextField fx:id="tfRef" promptText="Ex: 6ES7 214-1BG40-0XB0"/>
        <Label text="Quantité"/><TextField fx:id="tfQty" promptText="1"/>
        <Label text="Description"/><TextArea fx:id="taDesc" prefRowCount="3"/>
      </children>
    </GridPane>
  </content>
  <buttonTypes>
    <ButtonType text="Enregistrer" buttonData="OK_DONE"/>
    <ButtonType text="Annuler" buttonData="CANCEL_CLOSE"/>
  </buttonTypes>
</DialogPane>