<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Nouveau Client" />
      
      <GridPane hgap="10.0" vgap="15.0">
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="120.0" />
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>
         <children>
            <!-- Nom -->
            <Label text="Nom :" GridPane.rowIndex="0" />
            <TextField fx:id="txtNom" promptText="Nom du client" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <!-- Email -->
            <Label text="Email :" GridPane.rowIndex="1" />
            <TextField fx:id="txtEmail" promptText="adresse@email.com" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <!-- Téléphone -->
            <Label text="Téléphone :" GridPane.rowIndex="2" />
            <TextField fx:id="txtTelephone" promptText="01 23 45 67 89" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <!-- Adresse -->
            <Label text="Adresse :" GridPane.rowIndex="3" />
            <TextArea fx:id="txtAdresse" prefRowCount="3" promptText="Adresse complète" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <!-- Notes -->
            <Label text="Notes :" GridPane.rowIndex="4" />
            <TextArea fx:id="txtNotes" prefRowCount="3" promptText="Notes additionnelles" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </GridPane>
      
      <!-- Boutons -->
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         <children>
            <Button fx:id="btnAnnuler" mnemonicParsing="false" text="Annuler" />
            <Button fx:id="btnEnregistrer" defaultButton="true" mnemonicParsing="false" style="-fx-background-color: #4a90e2; -fx-text-fill: white;" text="Enregistrer" />
         </children>
      </HBox>
   </children>
</VBox>