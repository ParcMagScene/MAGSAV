<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsav.gui.societes.CompanyDetailController">
   <children>
      <ScrollPane fitToWidth="true" styleClass="detail-scroll-pane">
         <content>
            <VBox styleClass="detail-content">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Label styleClass="detail-panel-title" text="Détails de la Société" />
                     </children>
                  </HBox>
                  
                  <GridPane hgap="10.0" vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                     <children>
                        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="lblId" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="txtNom" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Adresse:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="txtAdresse" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Ville:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="txtVille" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Label text="Code postal:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="txtCodePostal" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        
                        <Label text="Téléphone:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <TextField fx:id="txtTelephone" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        
                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        
                        <Label text="Site web:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                        <TextField fx:id="txtSiteWeb" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                        
                        <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                        <TextArea fx:id="txtNotes" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                     </children>
                  </GridPane>
                  
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="btnSave" onAction="#saveCompany" text="Enregistrer" />
                        <Button fx:id="btnCancel" onAction="#cancel" text="Annuler" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>