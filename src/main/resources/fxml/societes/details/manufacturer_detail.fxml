<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.magsav.gui.societes.ManufacturerDetailController" prefWidth="800" prefHeight="520">
  <top>
    <HBox spacing="12" style="-fx-padding:12;">
      <children>
        <VBox spacing="6">
          <children>
            <ImageView fx:id="imgLogo" fitWidth="120" fitHeight="60" preserveRatio="true"/>
            <Button text="Choisir logoâ€¦" onAction="#onChooseLogo"/>
          </children>
        </VBox>
        <VBox spacing="6">
          <children>
            <Label fx:id="lblName" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="lblCount" text="0 produit(s)"/>
          </children>
        </VBox>
      </children>
    </HBox>
  </top>
  <center>
    <TableView fx:id="table">
      <columns>
        <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
        <TableColumn fx:id="colCode" text="Code" prefWidth="120"/>
        <TableColumn fx:id="colNom" text="Produit" prefWidth="220"/>
        <TableColumn fx:id="colSN" text="SN" prefWidth="160"/>
        <TableColumn fx:id="colSituation" text="Situation" prefWidth="140"/>
      </columns>
    </TableView>
  </center>
</BorderPane>