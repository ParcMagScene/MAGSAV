<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsav.gui.VehiculeFormController">
   <top>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <Label fx:id="lblTitre" text="Nouveau Véhicule" styleClass="title-label">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
         <Separator />
      </VBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true">
         <VBox spacing="15.0">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            
            <!-- Informations principales -->
            <VBox spacing="10.0">
               <Label text="Informations principales" styleClass="section-label">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               
               <GridPane hgap="15.0" vgap="10.0">
                  <columnConstraints>
                     <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0" />
                     <ColumnConstraints hgrow="ALWAYS" />
                     <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0" />
                     <ColumnConstraints hgrow="ALWAYS" />
                  </columnConstraints>
                  
                  <Label text="Immatriculation *:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="txtImmatriculation" promptText="Ex: AB-123-CD" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="Type de véhicule *:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                  <ComboBox fx:id="cmbTypeVehicule" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                  
                  <Label text="Marque:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextField fx:id="txtMarque" promptText="Ex: Renault" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Label text="Modèle:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <TextField fx:id="txtModele" promptText="Ex: Master" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  
                  <Label text="Année:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <Spinner fx:id="spnAnnee" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  
                  <Label text="Kilométrage:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                  <Spinner fx:id="spnKilometrage" prefWidth="120.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />
               </GridPane>
            </VBox>
            
            <!-- Statut et options -->
            <VBox spacing="10.0">
               <Label text="Statut et options" styleClass="section-label">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               
               <GridPane hgap="15.0" vgap="10.0">
                  <columnConstraints>
                     <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0" />
                     <ColumnConstraints hgrow="ALWAYS" />
                     <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0" />
                     <ColumnConstraints hgrow="ALWAYS" />
                  </columnConstraints>
                  
                  <Label text="Statut:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <ComboBox fx:id="cmbStatut" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="Location externe:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                  <CheckBox fx:id="chkLocationExterne" text="Véhicule en location" GridPane.columnIndex="3" GridPane.rowIndex="0" />
               </GridPane>
            </VBox>
            
            <!-- Notes -->
            <VBox spacing="10.0">
               <Label text="Notes et observations" styleClass="section-label">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               
               <TextArea fx:id="txtNotes" promptText="Notes, observations, historique de maintenance..." 
                        prefRowCount="4" wrapText="true" />
            </VBox>
            
            <!-- Informations système (lecture seule en modification) -->
            <VBox fx:id="vboxInfosSysteme" spacing="10.0" visible="false" managed="false">
               <Label text="Informations système" styleClass="section-label">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               
               <GridPane hgap="15.0" vgap="10.0">
                  <columnConstraints>
                     <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0" />
                     <ColumnConstraints hgrow="ALWAYS" />
                     <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0" />
                     <ColumnConstraints hgrow="ALWAYS" />
                  </columnConstraints>
                  
                  <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label fx:id="lblId" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="Créé le:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                  <Label fx:id="lblDateCreation" text="-" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                  
                  <Label text="Modifié le:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Label fx:id="lblDateModification" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </GridPane>
            </VBox>
         </VBox>
      </ScrollPane>
   </center>
   
   <bottom>
      <!-- Boutons d'action -->
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         
         <Button fx:id="btnAnnuler" text="Annuler" onAction="#onAnnuler" />
         <Button fx:id="btnSauvegarder" text="Sauvegarder" onAction="#onSauvegarder" styleClass="primary-button" />
      </HBox>
   </bottom>
</BorderPane>