<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magsav.gui.VehiculeController">
   <top>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         
         <!-- Titre et actions principales -->
         <HBox alignment="CENTER_LEFT" spacing="15.0">
            <Label text="Gestion des Véhicules" styleClass="title-label">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnNouveau" text="Nouveau Véhicule" styleClass="primary-button" onAction="#onNouveauVehicule" />
            <Button fx:id="btnActualiser" text="Actualiser" onAction="#onActualiser" />
         </HBox>
         
         <!-- Barre de recherche et filtres -->
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Rechercher:" />
            <TextField fx:id="txtRecherche" promptText="Immatriculation, marque, modèle..." prefWidth="250.0" onKeyReleased="#onRechercheChanged" />
            
            <Label text="Statut:" />
            <ComboBox fx:id="cmbStatutFiltre" prefWidth="150.0" onAction="#onStatutFiltreChanged" />
            
            <Label text="Type:" />
            <ComboBox fx:id="cmbTypeFiltre" prefWidth="150.0" onAction="#onTypeFiltreChanged" />
            
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblNombreVehicules" text="0 véhicule(s)" styleClass="info-label" />
         </HBox>
         
         <!-- Statistiques rapides -->
         <HBox spacing="20.0" alignment="CENTER_LEFT">
            <Label fx:id="lblStatsDisponibles" text="Disponibles: 0" styleClass="stat-disponible" />
            <Label fx:id="lblStatsEnService" text="En service: 0" styleClass="stat-service" />
            <Label fx:id="lblStatsMaintenance" text="Maintenance: 0" styleClass="stat-maintenance" />
            <Label fx:id="lblStatsHorsService" text="Hors service: 0" styleClass="stat-hors-service" />
         </HBox>
      </VBox>
   </top>
   
   <center>
      <!-- Table des véhicules -->
      <TableView fx:id="tableVehicules" onMouseClicked="#onTableClick">
         <columns>
            <TableColumn fx:id="colImmatriculation" text="Immatriculation" prefWidth="120.0" />
            <TableColumn fx:id="colType" text="Type" prefWidth="100.0" />
            <TableColumn fx:id="colMarque" text="Marque" prefWidth="100.0" />
            <TableColumn fx:id="colModele" text="Modèle" prefWidth="120.0" />
            <TableColumn fx:id="colAnnee" text="Année" prefWidth="70.0" />
            <TableColumn fx:id="colKilometrage" text="Kilométrage" prefWidth="100.0" />
            <TableColumn fx:id="colStatut" text="Statut" prefWidth="100.0" />
            <TableColumn fx:id="colLocationExterne" text="Location" prefWidth="80.0" />
            <TableColumn fx:id="colDateCreation" text="Créé le" prefWidth="120.0" />
            <TableColumn fx:id="colActions" text="Actions" prefWidth="120.0" />
         </columns>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   
   <bottom>
      <!-- Actions contextuelles -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         
         <Button fx:id="btnModifier" text="Modifier" onAction="#onModifierVehicule" disable="true" />
         <Button fx:id="btnSupprimer" text="Supprimer" onAction="#onSupprimerVehicule" disable="true" styleClass="danger-button" />
         <Separator orientation="VERTICAL" />
         <Button fx:id="btnVoirDetails" text="Voir Détails" onAction="#onVoirDetails" disable="true" />
         <Button fx:id="btnChangerStatut" text="Changer Statut" onAction="#onChangerStatut" disable="true" />
         
         <Region HBox.hgrow="ALWAYS" />
         <Button fx:id="btnExporter" text="Exporter" onAction="#onExporter" />
         <Button fx:id="btnImporter" text="Importer" onAction="#onImporter" />
      </HBox>
   </bottom>
</BorderPane>